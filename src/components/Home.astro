---
import xpEngineeringImage from "../assets/xp-engineering.png";
---

<main>
  <section class="relative h-screen overflow-hidden bg-black">
    <!-- Animated gradient background -->
    <div class="absolute inset-0 bg-gradient-to-br from-purple-900/20 via-cyan-900/20 to-blue-900/20 animate-gradient-shift"></div>
    
    <!-- Hexagon pattern overlay -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, rgba(139, 92, 246, 0.3) 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    
    <!-- Particle effect dots -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-cyan-400 rounded-full animate-float-1 opacity-60"></div>
      <div class="absolute top-1/3 right-1/3 w-1.5 h-1.5 bg-purple-400 rounded-full animate-float-2 opacity-60"></div>
      <div class="absolute bottom-1/4 left-1/3 w-2 h-2 bg-blue-400 rounded-full animate-float-3 opacity-60"></div>
      <div class="absolute top-1/2 right-1/4 w-1 h-1 bg-cyan-300 rounded-full animate-float-4 opacity-60"></div>
      <div class="absolute bottom-1/3 right-1/2 w-1.5 h-1.5 bg-purple-300 rounded-full animate-float-5 opacity-60"></div>
    </div>
    
    <!-- Hero image with glitch effect -->
    <div class="relative h-full w-full">
      <img
        src={xpEngineeringImage.src}
        alt="XP Engineering"
        class="h-full w-full object-cover relative z-10 brightness-105 contrast-110"
      />
      
      <!-- Glitch layers -->
      <img
        src={xpEngineeringImage.src}
        alt=""
        class="absolute inset-0 h-full w-full object-cover glitch-layer-1"
        aria-hidden="true"
      />
      <img
        src={xpEngineeringImage.src}
        alt=""
        class="absolute inset-0 h-full w-full object-cover glitch-layer-2"
        aria-hidden="true"
      />
      <img
        src={xpEngineeringImage.src}
        alt=""
        class="absolute inset-0 h-full w-full object-cover glitch-layer-3"
        aria-hidden="true"
      />
    </div>
    
    <!-- Animated border glow -->
    <div class="absolute inset-0 border-2 border-cyan-500/30 animate-border-pulse pointer-events-none z-20"></div>
    
    <!-- Shimmer effect overlay -->
    <div class="absolute inset-0 shimmer-overlay pointer-events-none z-30"></div>
    
    <!-- Grid pattern overlay -->
    <div class="absolute inset-0 opacity-5 pointer-events-none z-10" style="background-image: linear-gradient(rgba(139, 92, 246, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(139, 92, 246, 0.1) 1px, transparent 1px); background-size: 50px 50px;"></div>
  </section>
</main>

<style>
  @keyframes gradient-shift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .animate-gradient-shift {
    background-size: 200% 200%;
    animation: gradient-shift 8s ease infinite;
  }

  @keyframes float-1 {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -30px) scale(1.2);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.8);
    }
  }

  @keyframes float-2 {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    50% {
      transform: translate(-40px, 40px) scale(1.3);
    }
  }

  @keyframes float-3 {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    25% {
      transform: translate(25px, 25px) scale(1.1);
    }
    75% {
      transform: translate(-35px, -15px) scale(0.9);
    }
  }

  @keyframes float-4 {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    40% {
      transform: translate(20px, -25px) scale(1.4);
    }
    80% {
      transform: translate(-15px, 30px) scale(0.7);
    }
  }

  @keyframes float-5 {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    30% {
      transform: translate(-30px, -20px) scale(1.2);
    }
    60% {
      transform: translate(35px, 25px) scale(0.85);
    }
  }

  .animate-float-1 {
    animation: float-1 6s ease-in-out infinite;
  }

  .animate-float-2 {
    animation: float-2 8s ease-in-out infinite;
  }

  .animate-float-3 {
    animation: float-3 7s ease-in-out infinite;
  }

  .animate-float-4 {
    animation: float-4 9s ease-in-out infinite;
  }

  .animate-float-5 {
    animation: float-5 6.5s ease-in-out infinite;
  }

  @keyframes glitch-burst {
    0%, 96% {
      opacity: 0;
      clip-path: inset(0 0 100% 0);
      transform: translate(0);
    }
    97% {
      opacity: 0.8;
      clip-path: inset(20% 0 60% 0);
      transform: translate(-3px, 2px);
    }
    97.5% {
      opacity: 0.9;
      clip-path: inset(60% 0 20% 0);
      transform: translate(3px, -2px);
    }
    98% {
      opacity: 0.7;
      clip-path: inset(10% 0 80% 0);
      transform: translate(-2px, -3px);
    }
    98.5% {
      opacity: 0.85;
      clip-path: inset(80% 0 10% 0);
      transform: translate(2px, 3px);
    }
    99% {
      opacity: 0.6;
      clip-path: inset(30% 0 50% 0);
      transform: translate(-1px, 1px);
    }
    99.5% {
      opacity: 0.9;
      clip-path: inset(50% 0 30% 0);
      transform: translate(1px, -1px);
    }
    100% {
      opacity: 0;
      clip-path: inset(0 0 100% 0);
      transform: translate(0);
    }
  }

  @keyframes glitch-burst-2 {
    0%, 94% {
      opacity: 0;
      clip-path: inset(0 0 100% 0);
      transform: translate(0);
    }
    94.5% {
      opacity: 0.75;
      clip-path: inset(40% 0 40% 0);
      transform: translate(4px, -3px);
    }
    95% {
      opacity: 0.85;
      clip-path: inset(70% 0 10% 0);
      transform: translate(-4px, 3px);
    }
    95.5% {
      opacity: 0.7;
      clip-path: inset(15% 0 70% 0);
      transform: translate(3px, 2px);
    }
    96% {
      opacity: 0.8;
      clip-path: inset(85% 0 5% 0);
      transform: translate(-3px, -2px);
    }
    96.5% {
      opacity: 0.65;
      clip-path: inset(25% 0 60% 0);
      transform: translate(2px, -1px);
    }
    97% {
      opacity: 0;
      clip-path: inset(0 0 100% 0);
      transform: translate(0);
    }
    100% {
      opacity: 0;
      clip-path: inset(0 0 100% 0);
      transform: translate(0);
    }
  }

  @keyframes glitch-burst-3 {
    0%, 98% {
      opacity: 0;
      clip-path: inset(0 0 100% 0);
      transform: translate(0);
    }
    98.2% {
      opacity: 0.9;
      clip-path: inset(5% 0 85% 0);
      transform: translate(-5px, 4px);
    }
    98.4% {
      opacity: 0.8;
      clip-path: inset(90% 0 5% 0);
      transform: translate(5px, -4px);
    }
    98.6% {
      opacity: 0.85;
      clip-path: inset(35% 0 45% 0);
      transform: translate(-4px, 3px);
    }
    98.8% {
      opacity: 0.75;
      clip-path: inset(65% 0 20% 0);
      transform: translate(4px, -3px);
    }
    99% {
      opacity: 0.7;
      clip-path: inset(12% 0 75% 0);
      transform: translate(-2px, 2px);
    }
    99.2% {
      opacity: 0.8;
      clip-path: inset(78% 0 12% 0);
      transform: translate(2px, -2px);
    }
    99.4% {
      opacity: 0.6;
      clip-path: inset(45% 0 40% 0);
      transform: translate(-1px, 1px);
    }
    99.6% {
      opacity: 0;
      clip-path: inset(0 0 100% 0);
      transform: translate(0);
    }
    100% {
      opacity: 0;
      clip-path: inset(0 0 100% 0);
      transform: translate(0);
    }
  }

  .glitch-layer-1 {
    animation: glitch-burst 8s infinite;
    filter: hue-rotate(90deg);
    mix-blend-mode: screen;
  }

  .glitch-layer-2 {
    animation: glitch-burst-2 12s infinite;
    filter: hue-rotate(-90deg);
    mix-blend-mode: multiply;
  }

  .glitch-layer-3 {
    animation: glitch-burst-3 15s infinite;
    filter: hue-rotate(180deg) saturate(1.5);
    mix-blend-mode: overlay;
  }

  @keyframes border-pulse {
    0%, 100% {
      opacity: 0.3;
      box-shadow: 0 0 20px rgba(6, 182, 212, 0.3);
    }
    50% {
      opacity: 0.6;
      box-shadow: 0 0 40px rgba(6, 182, 212, 0.6), 0 0 60px rgba(139, 92, 246, 0.4);
    }
  }

  .animate-border-pulse {
    animation: border-pulse 3s ease-in-out infinite;
  }

  @keyframes shimmer {
    0% {
      background-position: -1000px 0;
    }
    100% {
      background-position: 1000px 0;
    }
  }

  .shimmer-overlay {
    background: linear-gradient(
      90deg,
      transparent,
      rgba(139, 92, 246, 0.1),
      rgba(6, 182, 212, 0.1),
      transparent
    );
    background-size: 1000px 100%;
    animation: shimmer 4s infinite;
  }
</style>
